{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",

        "paths": {
            "*": ["node_modules/*"],
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "src/__test__"]
}
